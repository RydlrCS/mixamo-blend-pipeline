[flake8]
# PEP 8 compliance with Black compatibility
max-line-length = 99
extend-ignore = E203, W503
exclude =
    .git,
    __pycache__,
    venv,
    env,
    .venv,
    build,
    dist,
    *.egg-info

# Error codes
# E203: whitespace before ':' (conflicts with Black)
# W503: line break before binary operator (conflicts with Black)

# Additional checks
max-complexity = 15
per-file-ignores =
    __init__.py:F401
